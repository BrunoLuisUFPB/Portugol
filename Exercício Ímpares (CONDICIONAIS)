programa Exercicio_Impares_Condicionais;

var 

 x , y, troca, soma, i : inteiro;

inicio

 EscrevaLinha('Digite dois nÃºmeros: ');
 leia(x);
 leia(y);

    se x > y entao
      inicio
      troca <-y;
      x <- y;
      y <- troca;
      
      fim;
      
      para i de (x + 1) ate (y - 1) faca
         inicio
         se i mod 2 <> 0 entao
         
         soma <- soma + i;
         
         fim;
         
 EscrevaLinha('SOMA= ', soma);     
      
fim.

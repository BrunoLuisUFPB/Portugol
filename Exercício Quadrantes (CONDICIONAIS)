programa Exercicio_Quadrante_Condicionais;

var

 x, y : real;

inicio

 repita
 EscrevaLinha('Digite os valores das coordenadas X e Y respectivamente: ');
 leia(x);
 leia(y);
 
      
      se (x > 0) e (y > 0) entao
      
         EscrevaLinha('Quadrante Q1')
         
         
         senao
         se (x < 0) e (y > 0) entao
   
            EscrevaLinha('Quadrante Q2')
            
      
            senao
            se (x < 0) e (y < 0) entao
   
               EscrevaLinha('Quadrante Q3')
              
               senao
               se (x > 0) e (y < 0) entao
   
                  EscrevaLinha('Quadrante Q4');
                  
 ateque (x = 0) ou (y = 0);
                      
fim.

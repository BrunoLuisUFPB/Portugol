programa Exercicio_Dardos_Condicionais;

var

 d1, d2, d3, maior: real;

inicio

 EscrevaLinha('Digite as três distâncias: ');
 leia(d1);
 leia(d2);
 leia(d3);
 
    se (d1 > d2) e (d1 > d3) entao
    
       maior <- d1
       
       senao
       se d2 > d3 entao
       
          maior <- d2
          
          senao
          se d3 > d2 entao
          
             maior <- d3;
             
             Escreva('MAIOR DISTÂNCIA: ', maior);
             
fim.

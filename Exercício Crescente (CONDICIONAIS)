programa Exercicio_Crescente_Condicionais;

var

  x , y : inteiro;

inicio

 repita
 EscrevaLinha('Digite dois n√∫meros: ');
 leia(x);
 leia(y);
 
       
    se x < y entao
       
       EscrevaLinha('CRESCENTE')
       
       senao
       

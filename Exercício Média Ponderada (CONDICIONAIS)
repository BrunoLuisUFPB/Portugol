programa Exercicio_MediaPonderada_Condicionais;

var

 N, i : inteiro;
 x1, x2, x3, media : real;
 

inicio

 Escreva('Quantos casos você vai digitar?: ');
 leia(N);
  
    para i de 1 ate N faca
       inicio
       EscrevaLinha('Digite três números: ');
       leia(x1);
       leia(x2);
       leia(x3);
       
       media <- (x1 * 2 + x2 * 3 + x3 * 5) / 10;
       
       EscrevaLinha('MÉDIA= ', media);
       
       fim;

fim.

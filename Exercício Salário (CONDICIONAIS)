programa Exercicio_Salario_Condicionais;

var

 salario, novoSalario, aumento, porcentagem : real;

inicio

 Escreva('Digite o salário da pessoa:R$ ');
  leia(salario);
 
    se salario <= 1000 entao
    
       porcentagem <- 20
       
       senao
       se salario <= 3000 entao
       
       porcentagem <- 15
       
       senao
       se salario <= 8000 entao
       
          porcentagem <- 10
          
          senao
          se salario < 8000 entao
          
          porcentagem <- 5;
 
 aumento <- salario * porcentagem / 100;
 
 novoSalario <- salario + aumento;

 EscrevaLinha('Salário novo:R$ ', novoSalario);
 
 EscrevaLinha('Aumento:R$ ', aumento);
 
 EscrevaLinha('Porcentagem: ', porcentagem, '%');
                               
fim.
